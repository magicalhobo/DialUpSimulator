{
  "manifest_version": 3,
  "name": "Dial-up Simulator",
  "version": "1.0.3",
  "description": "Simulates a dial-up connection experience to encourage mindful browsing",
  "permissions": [
    "storage",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["splash.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
